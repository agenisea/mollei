# Mollei Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# AI Provider (Required)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-...

# =============================================================================
# Authentication - Clerk (Required)
# =============================================================================
CLERK_SECRET_KEY=sk_...
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_...

# =============================================================================
# Database - Supabase Postgres via Drizzle (Required)
# =============================================================================
# Get this from: Supabase Dashboard → Project Settings → Database → Connection string
DATABASE_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# =============================================================================
# Rate Limiting - Redis (Optional)
# =============================================================================
# For multi-instance deployments. Falls back to in-memory if not configured.
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# =============================================================================
# Observability (Optional)
# =============================================================================
TRACE_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# =============================================================================
# Application URL (Optional)
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Development Settings (Optional)
# =============================================================================
SHOW_DEBUG_LOGS=false
